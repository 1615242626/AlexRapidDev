@model MvcEditorModel
@{
    bool? value;
    if (Model.Value is bool)
    {
        value = (bool) Model.Value;
    }
    else if (Model.Value == null)
    {
        value = false;
    }
    else
    {
        value = false;
    }
}
<div id="@Model.Metadata.ClrName">
    <div class="radio-inline">
        <label>
            <input type="radio" name="@Model.Metadata.ClrName" value="true" @Html.Raw(value.Value ? " checked=\"checked\"" : "")/>是
        </label>
    </div>
    <div class="radio-inline">
        <label>
            <input type="radio" name="@Model.Metadata.ClrName" value="false" @Html.Raw(value.Value ? "" : "checked=\"checked\"")/>否
        </label>
    </div>
</div>